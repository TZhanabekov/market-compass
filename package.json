{
  "name": "market-compass",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "dev:web": "pnpm --filter @market-compass/web dev",
    "build:web": "pnpm --filter @market-compass/web build",
    "dev:api": "pnpm --filter @market-compass/api dev",
    "build:api": "pnpm --filter @market-compass/api build",
    "start:api": "pnpm --filter @market-compass/api start"
  }
}
